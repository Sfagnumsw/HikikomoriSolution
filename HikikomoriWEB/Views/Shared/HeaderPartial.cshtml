<div id="header-wrapper">
    <div class="container">
        <header id="header">
            <h1><a asp-controller="Home" asp-action="Index">@Config.ProjectName</a></h1>
            <nav id="nav">
                <a asp-controller="Home" asp-action="Index">Главная</a>
                <a asp-controller="Content" asp-action="GetFilms">Фильмы</a>
                <a asp-controller="Content" asp-action="GetBooks">Книги</a>
                <a asp-controller="Content" asp-action="GetSerials">Сериалы</a>
                <a asp-controller="Content" asp-action="GetCartoons">Мультфильмы</a>
                <a asp-controller="Content" asp-action="GetGames">Игры</a>
            </nav>
        </header>
    </div>
    <div class="login-block">
        @if(User.Identity.IsAuthenticated)
        @await Html.PartialAsync("DropdownLogoutPartial")
        else
        @await Html.PartialAsync("DropdownLoginPartial")
    </div>
</div>
